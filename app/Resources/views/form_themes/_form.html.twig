{% block form_row -%}
    <div class="form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {% if help is defined and help %}
            <div>{{ help }}</div>
        {% endif %}
        {{- form_errors(form) -}}
    </div>
{%- endblock form_row %}